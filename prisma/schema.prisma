generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id         String    @id @default(uuid())
  title      String
  value      Float
  date       DateTime
  Category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?

  @@map("transactions")
}

model Category {
  id           Int           @id @default(autoincrement())
  categoryName String
  categoryType String
  transaction  Transaction[]

  @@map("categories")
}
