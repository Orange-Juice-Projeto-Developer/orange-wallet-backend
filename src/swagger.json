{
  "openapi": "3.0.0",
  "info": {
    "title": "Orange Wallet",
    "description": "Documentação da API do projeto Orange Wallet, da comunidade Orange Juice.",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/",
      "description": "Rota de Teste"
    },
    {
      "url": "https://orange-wallet-backend.herokuapp.com",
      "description": "Rota de Produção"
    }
  ],
  "paths": {
    "/createTransaction": {
      "post": {
        "summary": "Cria uma nova transação",
        "description": "Essa rota é responsável pelo cadastro de novas transações",
        "tags": ["Transaction"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              },
              "examples": {
                "transaction": {
                  "value": {
                    "title": "Pastel",
                    "value": 20,
                    "type": "Despesa",
                    "category": "Alimentação",
                    "date": "2022-07-27T00:20:37.575Z"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Transaction"
                }
              }
            }
          }
        }
      }
    },
    "/listTransaction": {
      "get": {
        "summary": "Lista as transações",
        "description": "Essa rota é responsável por listar todas as transações existentes",
        "tags": ["Transaction"],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "$ref": "#/components/schemas/Transaction"
                }
              }
            }
          }
        }
      }
    },
    "/editTransaction/{id}": {
      "patch": {
        "summary": "Atualiza uma transação",
        "description": "Essa rota é responsável por atualizar os dados de uma transação existente",
        "tags": ["Transaction"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da transação",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              },
              "examples": {
                "transaction": {
                  "value": {
                    "title": "Minn-Pastel",
                    "value": 15,
                    "type": "Despesa",
                    "category": "Alimentação"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Transaction"
                }
              }
            }
          }
        }
      }
    },
    "/deleteTransaction/{id}": {
      "delete": {
        "summary": "Deleta uma transação",
        "description": "Essa rota é responsável por deletar uma transação existente",
        "tags": ["Transaction"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da transação",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Transaction"
                }
              }
            }
          },
          "404": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Transaction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "value": {
            "type": "number",
            "format": "float"
          },
          "type": {
            "type": "string"
          },

          "category": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
